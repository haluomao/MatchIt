<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dip"/>
            <solid
                android:color="#80006699" />
            <padding
                android:bottom="10dp"
                android:left="30dp"
                android:right="30dp"
                android:top="10dp" />
        </shape>
    </item>
    <!-- 普通状态 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip"/>
            <gradient
                android:endColor="#ff339999"
                android:startColor="#ff33cc99"
                android:type="linear" />
            <padding
                android:bottom="10dp"
                android:left="30dp"
                android:right="30dp"
                android:top="10dp" />
        </shape>
    </item>

</selector>